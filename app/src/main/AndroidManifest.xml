<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.linkclink.pocketguidemini_wariors_game__beta_ver_01">

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.Launcher">

        <!-- Activity Main Menu -->
        <activity
            android:name=".MainActivity_1"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Button 1- Heroes menu   = -->
        <activity
            android:name=".HeroesMenuActivity_2"
            android:screenOrientation="portrait" />

        <!-- Button 2- items menu   = -->
        <activity
            android:name=".ItemsMenuActivity_2"
            android:screenOrientation="portrait" />

        <!-- Button 2 to step 1 - weapons menu -->
        <activity
            android:name=".WeaponsMenuActivity_3"
            android:screenOrientation="portrait" />

        <!-- Button 2 to step 1 to step 1-5 - items list list -->
        <activity
            android:name=".ItemsListActivity_4"
            android:screenOrientation="portrait" />

        <!-- Button 5 - credits info -->
        <activity
            android:name=".CreditsInfoActivity_2"
            android:screenOrientation="portrait" />

        <!-- Button 2 to step 2 to step 1-5 - weapons list -->
        <activity
            android:name=".ClothingMenuActivity_3"
            android:screenOrientation="portrait" />

        <!-- Button 2 to step 1-2 to step 1-5 and anything -->
        <activity
            android:name=".BasedInfoActivity_5"
            android:screenOrientation="portrait" />

        <!-- Button 2 to step 3 -->
        <activity
            android:name=".ChestsMenuActivuty_3"
            android:screenOrientation="portrait" />

        <!-- Button 2 step 3 step 1 -->
        <activity
            android:name=".ChestsInfoActivity_5"
            android:screenOrientation="portrait" />

        <!-- Button 2 step 3 step 2 -->
        <activity
            android:name=".KeysInfoActivity_5"
            android:screenOrientation="portrait" />

        <!-- Button 2 step 4 step 1 -->
        <activity
            android:name=".SkillsItemsMemuActivity_3"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

    </application>

</manifest>