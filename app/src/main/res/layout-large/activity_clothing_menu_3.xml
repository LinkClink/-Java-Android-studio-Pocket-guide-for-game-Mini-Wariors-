<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorbackActivity"

    >
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <TableLayout
            android:id="@+id/tableRow1"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="90dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/menuclothing_button_0"
                android:layout_height="80dp"
                android:layout_marginBottom="17dp"
                android:background="@drawable/main_buttons_selector"
                android:fontFamily="@font/the_girl_next_door"
                android:text="Helmets"
                android:onClick="onClick"
                android:textSize="40sp" />

            <Button
                android:id="@+id/menuclothing_button_1"
                android:layout_height="80dp"
                android:layout_marginBottom="17dp"
                android:background="@drawable/main_buttons_selector"
                android:fontFamily="@font/the_girl_next_door"
                android:text="Armours"
                android:textSize="40sp"
                android:onClick="onClick"
                />

            <Button
                android:id="@+id/menuclothing_button_2"
                android:layout_height="80dp"
                android:layout_marginBottom="17dp"
                android:background="@drawable/main_buttons_selector"
                android:fontFamily="@font/the_girl_next_door"
                android:text="Boots"
                android:textSize="40sp"
                android:onClick="onClick"
                />

            <Button
                android:id="@+id/menuclothing_button_3"
                android:layout_width="250dp"
                android:layout_height="80dp"
                android:layout_marginBottom="17dp"
                android:background="@drawable/main_buttons_selector"
                android:fontFamily="@font/the_girl_next_door"
                android:text="Rings"
                android:textSize="40sp"
                android:onClick="onClick"
                />

            <Button
                android:id="@+id/menuclothing_button_4"
                android:layout_height="80dp"
                android:layout_marginBottom="17dp"
                android:background="@drawable/main_buttons_selector"
                android:fontFamily="@font/the_girl_next_door"
                android:text="Necklaces"
                android:textSize="40sp"
                android:onClick="onClick"
                />

        </TableLayout>

    </LinearLayout>

    <include layout="@layout/layout_toolbar1_appname_all"></include>
    <include layout="@layout/layout_toolbar2_dataver_all"></include>

</RelativeLayout>
